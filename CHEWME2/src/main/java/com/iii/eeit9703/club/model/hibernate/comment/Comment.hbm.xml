<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.iii.eeit9703.club.model.CommentVO" table="comments">

		<id name="commentId" column="commentId">
			<generator class="identity" />
		</id>

		<property name="issueId" column="issueId" />
		<property name="content" column="content" />
		<property name="commenterId" column="commenterId" />
		<property name="commentDate" column="commentDate" />
	</class>
</hibernate-mapping>

