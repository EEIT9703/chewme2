       <composite-id>
        <key-many-to-one name ="memberVO" class="org.eeit.group3.member.model.MemberVO" lazy="false">
        		<column name="member_no" />
        </key-many-to-one>
        
        <key-many-to-one name ="memberVO" class="org.eeit.group3.activity.model.ActivityVO" lazy="false">
